<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpVerification"
    android:background="@color/secondryColor"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="90dp"
            app:lottie_rawRes="@raw/receivedotp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/otp_Verification"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="@string/enterOTP"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/midBlack" />

        <TextView
            android:id="@+id/text_input_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputOpt1"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:background="@drawable/bg_box"/>

            <EditText
                android:id="@+id/inputOpt2"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:background="@drawable/bg_box"/>

            <EditText
                android:id="@+id/inputOpt3"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:background="@drawable/bg_box"/>

            <EditText
                android:id="@+id/inputOpt4"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:background="@drawable/bg_box"/>

            <EditText
                android:id="@+id/inputOpt5"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:background="@drawable/bg_box"/>

            <EditText
                android:id="@+id/inputOpt6"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:background="@drawable/bg_box"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn\'t receive the OTP "
                android:textSize="14sp"
                android:textColor="@color/midBlack"/>

            <TextView
                android:id="@+id/resendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="RESEND OTP"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>


        </LinearLayout>


        <Button
            android:id="@+id/verifOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:layout_margin="30dp"
            android:textStyle="bold"
            android:background="@drawable/bg_button"/>


    </LinearLayout>

</ScrollView>